@model Fast_Food.Models.KhachHang

@{
    ViewData["Title"] = "EditKhachHang";
}

<div class="container mt-4 p-4 shadow-lg rounded bg-light">
    <h2 class="text-center text-primary">📦 Thông tin nhận hàng</h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="EditKhachHang" class="p-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="MaKhachHang" />

                <div class="mb-3">
                    <label class="form-label fw-bold">👤 Tên khách hàng</label>
                    <input asp-for="TenKhachHang" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="TenKhachHang" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">📞 Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">🏠 Địa chỉ nhận hàng</label>
                    <input asp-for="DiaChi" class="form-control border-primary shadow-sm" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success px-4 shadow-sm">💾 Lưu thông tin</button>
                </div>
            </form>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">⬅ Quay lại</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
