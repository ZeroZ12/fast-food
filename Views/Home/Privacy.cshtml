<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sticky Heading</title>
    <style>
        /* Thanh tiêu đề cố định trên cùng */
        .sticky-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: white;
            padding: 10px 20px;
            font-size: 24px;
            font-weight: bold;
            border-bottom: 2px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 1000;
            display: none; /* Ẩn ban đầu */
        }

        /* Định dạng nội dung */
        .content {
            margin-top: 50px;
            padding: 20px;
        }

        h1 {
            margin-top: 100px; /* Tạo khoảng cách để hiển thị sticky */
        }

        p {
            margin: 10px 0;
        }
    </style>
</head>
<body>

    <!-- Thanh tiêu đề cố định trên cùng -->
    <div class="sticky-header" id="stickyHeader"></div>

    <!-- Nội dung trang -->
    <div class="content">
        <h1 id="ga">Gà</h1>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>

        <h1 id="nuoc">Nước</h1>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>

        <h1 id="com">Cơm</h1>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>
        <p>Lorem ipsum dolor sit amet...</p>
    </div>

    <!-- JavaScript -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const headers = document.querySelectorAll("h1"); // Lấy tất cả các h1
            const stickyHeader = document.getElementById("stickyHeader");

            window.addEventListener("scroll", function () {
                let currentHeader = "";

                headers.forEach(header => {
                    const rect = header.getBoundingClientRect();
                    if (rect.top <= 10) {
                        currentHeader = header.textContent;
                    }
                });

                if (currentHeader) {
                    stickyHeader.textContent = currentHeader;
                    stickyHeader.style.display = "block";
                } else {
                    stickyHeader.style.display = "none";
                }
            });
        });
    </script>

</body>
</html>
